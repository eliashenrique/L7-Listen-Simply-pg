[Unit]
Description=Smart Log Service

[Service]
User=root
WorkingDirectory=/home/layer7/L7-Listen-Simply-pg
ExecStart=/usr/bin/python3 /home/layer7/L7-Listen-Simply-pg/smartlog.py
Type=simple
KillSignal=SIGINT
Environment=PYTHONUNBUFFERED=1
TimeoutStopSec=10
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
